Method 1 :

MVI A,4AH      
MOV B,A        
ANI 0FH        
MOV C,A         
MOV A,B         
ANI F0H          
MVI D,00H        
LOOP: CPI 00H
JZ DONE
SUI 10H          
INR D            
JMP LOOP
DONE: MOV A,D   
ADD C            
STA 2500H       
HLT


Method 2 :

MVI A,45H
MOV C,A
ANI 0FH
MOV B,A
MOV A,C
RLC
RLC
RLC
RLC
ANI 0FH
ADD B
HLT 
